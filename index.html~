<script>
$( document ).ready(function() {
    $(document).on('click', '#power', function(){
		var current_class = $(this).attr('class') == 'off' ? 'on' : 'off' ;
		$(this).attr('class', current_class);
		if ( current_class == 'off'){
			$('#cover').show();
			 mute();
		}
		else{
			$('#cover').hide();
			mute();
			player.playVideo();
		}
	});
});
</script>

